@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link href="~/css/Login.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <!-- Left Image Section -->
        <div class="image-box">
            <img src="~/Content/WORDVOYAGE.png" alt="Decorative Image" style="max-width: 250px; width: 120%; height: auto; box-shadow: none; border-radius: 8px;" />
        </div>

        <!-- Right Form Section -->
        <div class="form-box">
            <form id="account" method="post">
                <h2>@ViewData["Title"]</h2>

                <div class="input-field">
                    <label asp-for="Input.Email">Enter your email</label>
                    <input asp-for="Input.Email" required />
                </div>

                <div class="input-field">
                    <label asp-for="Input.Password">Enter your password</label>
                    <input asp-for="Input.Password" type="password" required />
                </div>

                <div class="options">
                    <label>
                        <input type="checkbox" asp-for="Input.RememberMe">
                        Remember me
                    </label>
                </div>

                <button type="submit" class="btn">Log In</button>

                <p class="register">Don't have an account? <a href="/Identity/Account/Register">Register</a></p>
            </form>
        </div>
    </div>

