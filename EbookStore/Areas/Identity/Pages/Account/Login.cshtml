@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <form id="account" method="post">
            <h2>@ViewData["Title"]</h2>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-field">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" required />
                <label asp-for="Input.Email">Enter your email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="input-field">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" type="password" required />
                <label asp-for="Input.Password">Enter your password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="forget">
                <label for="remember">
                    <input type="checkbox" asp-for="Input.RememberMe" id="remember">
                    <p>Remember me</p>
                </label>
                <a href="#">Forgot password?</a>
            </div>

            <button type="submit" class="btn">Log In</button>

            <div class="register">
                <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>
            </div>
        </form>
    </div>

