@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-content">
            <!-- Sidebar Section -->
            

            <!-- Main Content Section -->
            <main class="profile-main">
                <h3>@ViewData["Title"]</h3>
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Old Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                        <label asp-for="Input.OldPassword">Old Password</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                        <label asp-for="Input.NewPassword">New Password</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-custom">Update Password</button>
                </form>
            </main>
            <aside class="profile-sidebar">
                <h3>Manage your account</h3>
                <ul class="profile-nav">
                    <li><a asp-page="./Index" class="@ManageNavPages.IndexNavClass(ViewContext)">Profile</a></li>
                    <li><a asp-page="./Email" class="@ManageNavPages.EmailNavClass(ViewContext)">Email</a></li>
                    <li><a asp-page="./ChangePassword" class="@ManageNavPages.ChangePasswordNavClass(ViewContext)">Password</a></li>
                    <li><a asp-page="./PersonalData" class="@ManageNavPages.PersonalDataNavClass(ViewContext)">Personal data</a></li>
                </ul>
            </aside>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
