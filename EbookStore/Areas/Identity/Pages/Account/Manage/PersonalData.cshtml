@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-content">
            <!-- Sidebar Section -->
            

            <!-- Main Content Section -->
            <main class="profile-main">
                <h3>@ViewData["Title"]</h3>
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>

                <!-- Download Data Form -->
                <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-3">
                    <button class="btn btn-custom" type="submit">Download</button>
                </form>

                <!-- Delete Data Link -->
                <form asp-page="DeletePersonalData" method="get">
                    <button class="btn btn-danger w-100">Delete</button>
                </form>
            </main>
            <aside class="profile-sidebar">
                <h3>Manage your account</h3>
                <ul class="profile-nav">
                    <li><a asp-page="./Index" class="@ManageNavPages.IndexNavClass(ViewContext)">Profile</a></li>
                    <li><a asp-page="./Email" class="@ManageNavPages.EmailNavClass(ViewContext)">Email</a></li>
                    <li><a asp-page="./ChangePassword" class="@ManageNavPages.ChangePasswordNavClass(ViewContext)">Password</a></li>
                    <li><a asp-page="./TwoFactorAuthentication" class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)">Two-factor authentication</a></li>
                    <li><a asp-page="./PersonalData" class="@ManageNavPages.PersonalDataNavClass(ViewContext)">Personal data</a></li>
                </ul>
            </aside>
        </div>
    </div>
</div>
