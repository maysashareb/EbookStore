<div class="container py-5">
    <h1 class="text-orange mb-5 text-center">Admin Dashboard</h1>

    <div class="row g-4">
        <!-- Orders Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-4x text-orange mb-3"></i>
                    <h5 class="card-title mt-3">Orders</h5>
                    <p class="card-text">Manage and track all customer orders efficiently.</p>
                    <a asp-action="AllOrders" asp-controller="Admin" class="btn btn-orange btn-block">Manage Orders</a>
                </div>
            </div>
        </div>

        <!-- Customers Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-4x text-orange mb-3"></i>
                    <h5 class="card-title mt-3">Customers</h5>
                    <p class="card-text">View and manage all registered customers.</p>
                    <a asp-action="Customers" asp-controller="Admin" class="btn btn-orange btn-block">Manage Customers</a>
                </div>
            </div>
        </div>
        <!-- Books Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-book fa-4x text-orange mb-3"></i>
                    <h5 class="card-title mt-3">Books</h5>
                    <p class="card-text">Add, update, and manage the book inventory.</p>
                    <a asp-action="Managebooks" asp-controller="Admin" class="btn btn-orange btn-block">Manage Books</a>
                </div>
            </div>
        </div>
        <!-- Categories Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-tags fa-4x text-orange mb-3"></i>
                    <h5 class="card-title mt-3">Categories</h5>
                    <p class="card-text">Organize books into relevant categories.</p>
                    <a asp-action="ManageCategories" asp-controller="Admin" class="btn btn-orange btn-block">Manage Categories</a>
                </div>
            </div>
        </div>
        <!-- Waiting Lists Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-4x text-orange mb-3"></i>
                    <h5 class="card-title mt-3">Waiting Lists</h5>
                    <p class="card-text">Monitor and manage book borrowing requests.</p>
                    <a asp-action="WaitingLists" asp-controller="Admin" class="btn btn-orange btn-block">View Waiting Lists</a>
                </div>
            </div>
        </div>
        <!-- Messages Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-envelope fa-4x text-orange mb-3"></i>
                    <h5 class="card-title mt-3">Messages</h5>
                    <p class="card-text">Review and respond to customer inquiries.</p>
                    <a asp-action="Messages" asp-controller="Admin" class="btn btn-orange btn-block">Manage Messages</a>
                </div>
            </div>
        </div>
    </div>
</div>

