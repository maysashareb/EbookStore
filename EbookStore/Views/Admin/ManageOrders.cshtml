@model List<Order>

<h2>Manage Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Username</th>
            <th>Order Type</th>
            <th>Book Title</th>
            <th>Order Price</th>
            <th>Total Amount</th>
            <th>Payment Status</th>
            <th>Payment Method</th>
            <th>Order Date</th>
            <th>Borrow Date</th>
            <th>Due Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Username</td>
                <td>@(order.IsPurchase ? "Purchase" : "Borrow")</td>
                <td>@order.BookTitle</td>
                <td>@order.OrderPrice.ToString("C")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.PaymentStatus</td>
                <td>@order.PaymentMethod</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.BorrowDate?.ToString("g")</td>
                <td>@order.DueDate?.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
