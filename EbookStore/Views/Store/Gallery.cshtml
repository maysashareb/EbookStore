@model IEnumerable<EbookStore.Models.Book>

@{
    ViewData["Title"] = "Store";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EbookStore</title>
    <link rel="stylesheet" href="~/css/gallery.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
</head>

<h1 class="gallery-title">eBook Gallery</h1>
<p class="gallery-subtitle">Explore our collection of digital books across various genres.</p>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-3 mb-4">
            <!-- Entire Card wrapped in Anchor Tag -->
            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="@book.ImageUrl" class="card-img-top product-image" alt="@book.Title" />
                    <div class="card-body">
                        <h5 class="mb-3">@book.Title</h5>
                        <span class="card-text">@book.Price.ToString("c")</span>
                        <a asp-controller="Store" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-primary store-btn float-right"><i class="fa-solid fa-cart-plus"></i> Add to cart</a>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
